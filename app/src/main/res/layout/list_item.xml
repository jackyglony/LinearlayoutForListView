<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FEFEFE"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_evaluation_userimageview"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/contact_choice_click" />

                <TextView
                    android:id="@+id/txt_evalutaion_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/iv_evaluation_userimageview"
                    android:text="汪同学"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/linear_evalutaion_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/txt_evalutaion_username"
                    android:orientation="horizontal" />

                <TextView
                    android:id="@+id/txt_evalutaion_reply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:text="回复"
                    android:textColor="#2b79dc" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.25dip"
            android:background="#E5E5E5" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_evaluation_class_name_xx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="科目：" />

            <TextView
                android:id="@+id/txt_evaluation_class_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/txt_evaluation_class_name_xx"
                android:text="高中数学" />

            <TextView
                android:id="@+id/txt_evaluation_class_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/txt_evaluation_class_name"
                android:text="试讲评价" />

            <TextView
                android:id="@+id/txt_evaluation_class_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2014-10-04 07：35"
                android:textColor="#B2B1B2" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_evaluation_class_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="我是十五中的，在马老师的辅导下，我发现自己喜欢上了数学，之前我刚刚及格，这次期中考试108分，哈哈我太开心了，有这样的老师真好"
            android:textColor="#848484" />

        <LinearLayout
            android:id="@+id/linear_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:id="@+id/txt_evaluation_teacher_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="老师回复:"
                android:textColor="#3085df" />

            <TextView
                android:id="@+id/txt_evaluation_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="汪同学一开始,对知识点的掌握度还不够.并且,并且不能将知识串联起来." />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/evaluation_list_item_header"
        android:layout_width="match_parent"
        android:layout_height="10dip"
        android:background="#EAEAEA" >
    </TextView>

</LinearLayout>